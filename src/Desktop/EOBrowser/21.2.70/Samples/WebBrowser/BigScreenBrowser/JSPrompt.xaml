<Window x:Class="BigScreenBrowser.JSPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:eo="http://schemas.essentialobjects.com/wpf/"
        Title="请输入" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="lblMsg" Grid.Row="0" VerticalAlignment="Center"></TextBlock>
        <TextBox x:Name="txtPrompt" Grid.Row="1" VerticalAlignment="Center"></TextBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <eo:Button Width="80" Height="23" Margin="0,0,10,0" IsDefault="True" Click="OnOK">确定</eo:Button>
            <eo:Button Width="80" Height="23" IsCancel="True" Click="CancleClick">取消</eo:Button>
        </StackPanel>
    </Grid>
</Window>
