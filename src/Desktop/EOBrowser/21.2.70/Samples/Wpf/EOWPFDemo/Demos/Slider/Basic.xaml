<UserControl x:Class="EO.Wpf.Demo.Demos.Slider.Basic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:eo="http://schemas.essentialobjects.com/wpf/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
            This sample demonstrates a basic Slider and RangeSlider.
        </TextBlock>
        <eo:Slider Width="300" Minimum="0" Maximum="100" TickFrequency="10" TickPlacement="Both" HorizontalAlignment="Left"></eo:Slider>
        <eo:RangeSlider Margin="0,10,0,0" Width="300" Minimum="0" Maximum="100" TickFrequency="10" TickPlacement="Both" RangeStart="10" RangeEnd="30" HorizontalAlignment="Left"></eo:RangeSlider>
    </StackPanel>
</UserControl>
