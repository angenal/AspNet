<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:eo="clr-namespace:EO.Wpf;assembly=EO.Wpf"
                    xmlns:theme="clr-namespace:EO.Wpf.Themes.Aero;assembly=EO.Wpf"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Samples styles for custom themes. See Demos\Theme\CustomSkin1 for more details  -->
<Style x:Key="{eo:NamedResourceKey Sample_Button_Red}" TargetType="{x:Type eo:Button}">
    <Setter Property="Foreground" Value="Red"></Setter>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="{x:Type eo:Button}">
                <Border BorderBrush="Red" BorderThickness="1" Padding="3">
                    <ContentPresenter  />
                </Border>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>
    <Style x:Key="{eo:NamedResourceKey Sample_Button_Blue}" TargetType="{x:Type eo:Button}">
        <Setter Property="Foreground" Value="Blue"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type eo:Button}">
                    <Border BorderBrush="Blue" BorderThickness="1" Padding="3">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>